# -*- bash -*-
# ~/.bash_osx

# Attempt to load brew - bash completions
if [ -f "$(brew --prefix)/etc/bash_completion" ]; then
  . "$(brew --prefix)/etc/bash_completion"
fi

# Homebrew's sbin fix
export PATH="/usr/local/sbin:$PATH"

# Docker
eval $(docker-machine env default)

PY3PATH="$(which python3)"
if [[ ${PY3PATH} ]]; then
    if [[ -z ${STY} ]]; then
        export VIRTUALENVWRAPPER_PYTHON="${PY3PATH}"
    fi
fi

VIRTUALENVPATH="$(which virtualenv)"
if [[ ${VIRTUALENVPATH} ]]; then
    export VIRTUALENVWRAPPER_VIRTUALENV="${VIRTUALENVPATH}"
fi

### Exports
export CLICOLOR=YES
